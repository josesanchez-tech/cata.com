<script>
const BASE = 'https://datosabiertos.dgcp.gob.do/api-dgcp/v1';

async function search(page = 1) {
  const q = document.getElementById('searchInput').value.trim();
  const estado = document.getElementById('estadoFilter').value;
  const mipyme = document.getElementById('mipymeFilter').value;
  const limit = document.getElementById('limitSelect').value;

  document.getElementById('results').innerHTML = `<div class="loading"><div class="spinner"></div><p>Cargando...</p></div>`;
  document.getElementById('statsBar').style.display = 'none';
  document.getElementById('pagination').innerHTML = '';

  let url = `${BASE}/proveedores?page=${page}&limit=${limit}`;
  if (q) url += `&razon_social=${encodeURIComponent(q)}`;
  if (estado) url += `&estado=${encodeURIComponent(estado)}`;
  if (mipyme) url += `&es_mipyme=${encodeURIComponent(mipyme)}`;

  try {
    const res = await fetch(url);
    const data = await res.json();
    const items = data.payload?.content;

    if (!items?.length) {
      document.getElementById('results').innerHTML = `<div class="empty">üò∂ No se encontraron proveedores con esos criterios.</div>`;
      return;
    }

    const total = data.totalResults || 0;
    const pages = data.pages || 1;

    document.getElementById('statsBar').style.display = 'flex';
    document.getElementById('totalCount').textContent = total.toLocaleString('es-DO');
    document.getElementById('pageNum').textContent = page;
    document.getElementById('pageTotal').textContent = pages.toLocaleString('es-DO');

    document.getElementById('results').innerHTML = items.map(p => {
      const ec = `e-${(p.estado || 'Inactivo').replace(/\s/g,'')}`;
      const a√±o = p.fecha_creacion_empresa ? new Date(p.fecha_creacion_empresa).getFullYear() : null;
      return `<div class="card">
        <div>
          <h3>${p.razon_social || '‚Äî'}</h3>
          <div class="chips">
            <span class="chip blue">${p.tipo_documento}: ${p.numero_documento || '‚Äî'}</span>
            ${p.forma_juridica ? `<span class="chip">${p.forma_juridica}</span>` : ''}
            ${p.es_mipyme === 'Si' ? `<span class="chip green">MIPYME ‚úì</span>` : ''}
            ${p.clasificacion && p.clasificacion !== 'No clasificada' ? `<span class="chip">${p.clasificacion}</span>` : ''}
          </div>
          <div class="meta">
            ${p.municipio || p.provincia ? `<span>üìç ${p.municipio || p.provincia}</span>` : ''}
            ${p.provee ? `<span>üì¶ ${p.provee}</span>` : ''}
            ${a√±o ? `<span>üìÖ Desde ${a√±o}</span>` : ''}
            ${p.telefono_comercial ? `<span>üìû ${p.telefono_comercial}</span>` : ''}
          </div>
        </div>
        <div class="card-right">
          <span class="estado ${ec}">${p.estado || '‚Äî'}</span>
          <span class="rpe">RPE #${p.rpe}</span>
          ${p.url_certificacion ? `<a href="${p.url_certificacion}" target="_blank" class="cert">‚Üì Constancia</a>` : ''}
        </div>
      </div>`;
    }).join('');

    // Pagination
    if (pages > 1) {
      let pg = '';
      pg += `<button class="btn btn-ghost" ${page<=1?'disabled style="opacity:.35"':''} onclick="search(${page-1})">‚Üê Anterior</button>`;
      pg += `<span class="pg-info">P√°g. ${page} / ${pages.toLocaleString('es-DO')}</span>`;
      pg += `<button class="btn btn-ghost" ${page>=pages?'disabled style="opacity:.35"':''} onclick="search(${page+1})">Siguiente ‚Üí</button>`;
      document.getElementById('pagination').innerHTML = pg;
    }

  } catch(e) {
    document.getElementById('results').innerHTML = `<div class="empty">‚ö†Ô∏è Error al conectar con la API.<br><small>${e.message}</small></div>`;
  }
}

function clearSearch() {
  document.getElementById('searchInput').value = '';
  document.getElementById('estadoFilter').value = '';
  document.getElementById('mipymeFilter').value = '';
  search(1);
}

document.getElementById('searchInput').addEventListener('keydown', e => { if(e.key==='Enter') search(1); });

search(1);
</script>
</body>
